@model User

<div class="container main-container">
    <div class="text-center mt-5">
        <h1 class="display-4">Login Form</h1>
    </div>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="border p-4 bg-white">
                    @using (Html.BeginForm("Login", "Home"))
                    {
                        <div class="form-group row p-2">
                            <label for="email" class="col-sm-2 col-form-label">Email:</label>
                            <div class="col-sm-10">
                                <input class="form-control" placeholder="Email" id="email" name="email" required="required" type="text" />
                            </div>
                        </div>
                        <div class="form-group row p-2">
                            <label for="password" class="col-sm-2 col-form-label">Password:</label>
                            <div class="col-sm-10">
                                <input class="form-control" placeholder="Password" id="password" name="password" required="required" type="text" />
                            </div>
                        </div>
                        <div style="color:red">
                            @ViewBag.error
                        </div>

                        <div class="form-group m-2">
                            <input type="submit" value="Login" class="btn btn-primary mx-3 d-inline-block " />
                            <a href="#" class="btn btn-secondary d-inline-block mx-3 ">Forgotten Email</a>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-4">
                <img src="~/Images/Login.png" class="img-fluid" alt="Image">
            </div>
        </div>
    </div>
</div>
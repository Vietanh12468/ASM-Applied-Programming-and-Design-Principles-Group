@model Course
@{
    var alertMessage = TempData["AlertMessage"] as string;
}

@if (!string.IsNullOrEmpty(alertMessage))
{
    <script>
        alert('@alertMessage');
    </script>
}
@{
    ViewData["Title"] = "Create Course";
}

<div class="container main-container w-50">
    <div class="m-3">
        <h1>Create Course</h1>
        <div>
            @using (Html.BeginForm("CreateCourse", "CourseAndMajor")){
                <div class="form-group row p-2">
                    <label for="courseName" class="col-sm-2 col-form-label">Course Name:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.name, new { @class = "form-control", @placeholder = "Name", @id = "name", @name = "name", required = "required", type = "text" })
                    </div>
                </div>
                <!-- Add more fields as needed -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Create Course</button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
}

